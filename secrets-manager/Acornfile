args: {
	// Secret Manager ARN
	arn: ""
	// Cron based schedule
	refreshSchedule: ""
	// Format of the secret. If json the object must be in the format of a JSON object with only string values
	format: "text" | "json"
	// Region containing the secret
	region: ""
}

services: "secret-manager": {
	generated: job: "generate-secrets"
}

jobs: {
	"generate-secrets": {
		build: {
			context: "."
		}
		schedule: args.refreshSchedule
		env: {
			// Default region
			AWS_REGION: "secret://aws-config/aws-region"
			// User specified region
			REGION: args.region
			FORMAT: args.format
		}
		command: [args.arn]
		permissions: rules: [
			{
				apiGroup: "aws.acorn.io"
				verbs: [
					"secretsmanager:GetSecretValue",
				]
				resources: ["\(args.arn)"]
			},
		]
	}
}

secrets: {
	"aws-config": {
		external: "context://aws"
		type:     "opaque"
		data: {
			"account-id": ""
			"vpc-id":     ""
			"aws-region": ""
		}
	}
	"item": {
		type: "generated"
		params: {
			job:    "generate-secrets"
			format: "json"
		}
	}
}
